<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.main.fragments.SensorsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:longClickable="true"
            android:gravity="center_vertical"
            android:elevation="6dp"
            android:outlineAmbientShadowColor="@color/colorSecondaryDark"
            android:outlineSpotShadowColor="@color/colorSecondaryDark"
            android:outlineProvider="background"
            android:background="@drawable/background_shape_item"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/patientNameSensors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Id. Patient Name"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/patientDiseaseSensors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COVID - 19"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSensors"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:scrollbars="vertical" />

    </LinearLayout>

</FrameLayout>
