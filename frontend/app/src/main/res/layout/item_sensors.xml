<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginVertical="10dp"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="true"
    android:gravity="center_vertical"
    android:elevation="6dp"
    android:outlineAmbientShadowColor="@color/colorSecondaryDark"
    android:outlineSpotShadowColor="@color/colorSecondaryDark"
    android:outlineProvider="background"
    android:background="@drawable/background_shape_item"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.5"
                    android:orientation="vertical"
                    android:padding="10dp">

                        <TextView
                            android:id="@+id/nameTextViewItemSensors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Sensor Name"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="3.5"
                    android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="vertical">

                                <TextView
                                    android:id="@+id/measurementTextViewItemSensors"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:text="92 BPS"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                        </LinearLayout>

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartItemSensors"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.github.mikephil.charting.charts.LineChart>

        </LinearLayout>
</LinearLayout>